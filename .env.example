# FastAPI application settings
PROJECT_NAME=Curana Health UM API
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# SECURITY
# ----------------------------------------------------------------------------
# Must be at least 32 characters in production
SECRET_KEY=change-this-to-a-long-random-string-at-least-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ----------------------------------------------------------------------------
# DATABASE (choose ONE of the two options below)
# ----------------------------------------------------------------------------
# Option A: Single DATABASE_URL (recommended for local dev)
# Example: postgresql+asyncpg://username:password@localhost:5432/um
DATABASE_URL=

# Option B: Individual Postgres settings (used if DATABASE_URL is empty)
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_SERVER=
POSTGRES_PORT=5432
POSTGRES_DB=

DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# ----------------------------------------------------------------------------
# AZURE AD (required for token validation)
# ----------------------------------------------------------------------------
AZURE_AD_TENANT_ID=
AZURE_AD_CLIENT_ID=
# Optional if using confidential clients; not needed for access token validation
AZURE_AD_CLIENT_SECRET=

# Optional overrides (normally derived automatically)
AZURE_AD_AUTHORITY=
AZURE_AD_ISSUER=
AZURE_AD_JWKS_URI=

# ----------------------------------------------------------------------------
# CORS
# ----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000

# ----------------------------------------------------------------------------
# AZURE STORAGE (required for document upload/download routes)
# ----------------------------------------------------------------------------
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=um-upload-doc
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_INTAKE_CONTAINER=intake
AZURE_STORAGE_CLINICAL_CONTAINER=clinical

# ----------------------------------------------------------------------------
# AI/ML (optional)
# ----------------------------------------------------------------------------
AI_SERVICE_ENABLED=false
AI_SERVICE_ENDPOINT=
AI_SERVICE_API_KEY=
AI_CONFIDENCE_THRESHOLD=0.7

# ----------------------------------------------------------------------------
# Rate limiting (optional)
# ----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ----------------------------------------------------------------------------
# Session/retention (optional)
# ----------------------------------------------------------------------------
SESSION_CLEANUP_ENABLED=true
SESSION_CLEANUP_INTERVAL=3600
SESSION_MAX_AGE_DAYS=30

# ----------------------------------------------------------------------------
# File uploads
# ----------------------------------------------------------------------------
MAX_FILE_SIZE_MB=50
